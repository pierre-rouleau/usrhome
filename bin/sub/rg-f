#!/bin/sh
# SH FILE: rg-f
#
# Purpose   : Ripgrep search for specific file type.
# Created   : Tuesday, June 11 2024.
# Author    : Pierre Rouleau <prouleau001@gmail.com>
# Time-stamp: <2024-06-11 13:27:28 EDT, updated by Pierre Rouleau>
# ----------------------------------------------------------------------------
# Module Description
# ------------------
#
# This is a sub-command of ../rgf

# ----------------------------------------------------------------------------
# Code
# ----
#
#

# Validate args
case "$1" in
    rg)  cmd=rg   ;;
    rga) cmd=rga  ;;
    *)
        printf -- "*** INTERNAL ERROR in rg-f\n"
        exit 4
        ;;
esac
shift

case "$1" in
    --type=*)
        type="$(echo "$1" | sed 's/--type=//g')"
        shift
        ;;
    *)
    exit 3
esac

case ${type} in
    c)
        ${cmd} -t c "$@"
        ;;

    cpp)
        ${cmd} -t cpp "$@"
        ;;

    c/cpp | C)
        ${cmd} -t c -t cpp "$@"
        ;;

    c/cpp/make | CM)
        ${cmd} -t c -t cpp -t make -t mk -t config -t swig "$@"
        ;;

    d)
        ${cmd} -t d "$@"
        ;;

    make | M)
        ${cmd} -t make -t m4 -t mk -t amake -t cmake "$@"
        ;;

    sh)
        ${cmd} -t sh -t zsh  "$@"
        ;;

    el | elisp)
        ${cmd} -t elisp "$@"
        ;;

    erl | erlang)
        ${cmd} -t erlang -t c "$@"
        ;;

    go)
        ${cmd} -t go "$@"
        ;;

    py | python)
        ${cmd} -t python "$@"
        ;;

    rust)
        ${cmd} -t rust -t toml "$@"
        ;;

    zig)
        ${cmd} -t zig "$@"
        ;;

    doc)
        ${cmd} -t org -t markdown -t readme -t rst -t txt -e -g '*.stxt' -g '*.dot' "$@"
        ;;

    doc+)
        ${cmd} -t org -t markdown -t readme -t rst -t txt -e -t pdf -g '*.stxt' -g '*.dot' "$@"
        ;;

    pdf)
        ${cmd} -t pdf "$@"
        ;;

    html)
        ${cmd} -t html -t css "$@"
        ;;

    *)
        printf -- "
*** rgf ERROR: unsupported TYPE: %s
" "$type"
        exit 2
        ;;

esac

# ----------------------------------------------------------------------------
# Local Variables:
# sh-shell: sh
# End:
