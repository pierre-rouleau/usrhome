#!/bin/bash
# SH FILE: show-binutils
#
# Purpose   : List path  of all executables thta are part of GNU binutils.
# Created   : Tuesday, August 27 2024.
# Author    : Pierre Rouleau <prouleau001@gmail.com>
# Time-stamp: <2026-02-18 17:04:40 EST, updated by Pierre Rouleau>
# ----------------------------------------------------------------------------
# Module Description
# ------------------
#
# List the presence of all utilities that are part of the GNU binutils
# As listed in https://www.gnu.org/software/binutils/binutils.html

# ----------------------------------------------------------------------------
# Dependencies
# ------------
#
# Bash, printf, command, ls

# ----------------------------------------------------------------------------
# Code
# ----
#
#

commands=( addr2line
           ar
           as
           c++filt
           dlltool
           elfedit
           gold
           gprof
           ld
           nlmconv
           nm
           objcopy
           objdump
           pprofng
           ranlib
           readelf
           size
           strings
           strip
           windmc
           windres
         )

for cmd in "${commands[@]}" ; do
    if command -v "${cmd}" > /dev/null; then
        printf -- "%-10s   : %s\n" "${cmd}" "$(ls -l "$(command -v "${cmd}")")"
    else
        printf -- "%-10s   : not available\n"  "${cmd}"
    fi
done

# ----------------------------------------------------------------------------
# Local Variables:
# sh-shell: bash
# End:
